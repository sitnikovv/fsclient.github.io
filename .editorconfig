root = true

# Default settings
[*.{cs,csx,vb,vbx}]
indent_style = space
indent_size = 4
charset = utf-8-bom
insert_final_newline = true

# Unix-only files
[*.sh]
end_of_line = lf

# Xml config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# 2-space files
[{*.json,*.yml,*.xaml}]
indent_size = 2
